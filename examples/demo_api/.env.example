# Environment variables for fintech API demo

# =============================================================================
# fin-infra Provider Credentials
# =============================================================================

# Plaid (Banking)
PLAID_CLIENT_ID=your_client_id
PLAID_SECRET=your_secret
PLAID_ENV=sandbox

# Teller (Banking - alternative)
TELLER_APP_ID=your_app_id
TELLER_CERTIFICATE=./teller_certificate.pem
TELLER_PRIVATE_KEY=./teller_private_key.pem
TELLER_ENV=sandbox

# Alpha Vantage (Market Data)
ALPHAVANTAGE_API_KEY=your_api_key

# =============================================================================
# svc-infra Configuration
# =============================================================================

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=plain

# Observability
METRICS_ENABLED=true
METRICS_PATH=/metrics

# App Environment
APP_ENV=local
